<%= form_with model: @plan, url: calendars_path, class: 'form' do |f| %>
  <%= f.date-select :日付を選択, class: 'date_field' %>
  <%= f.plan :予定を入力, class: 'text-field' %>
  <%= f.label :保存, class: 'submit' %>
<% end %>

<div class=calendar>
  <% @week_days.each do |day| %>
    <div class='item'>
      <div class='date'>
        <% day[:month] %>/<% day[:date] %>
      </div>
      <ul class='content'>
        <% if @plans.length != 0 %>
          <% @plans.each do |plan| %>
            <li class='plan-list'><%= plan %></li>
          <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>