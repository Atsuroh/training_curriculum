<%= form_with model: @plan, url: calendars_path, class: 'form' do |f| %>
  <%= f.date_field :日付を選択, class: 'date-select' %>
  <%= f.text_field :予定を入力, class: 'plan' %>
  <%= f.submit '保存' %>
<% end %>
<div class=calendar>
  <% @week_days.each do |day| %>
    <div class='item'>
      <div class='date'>
        <%= day[:month] %>/<%= day[:date] %>
      </div>
      <ul class='content'>
      <% if day[:plans].length != 0 %>
        <% day[:plans].each do |plan| %>
          <li class='plan-list'>・<%= plan %></li>
        <% end %>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>